	\subsubsection{Casos de uso} % (fold)
	\label{ssub:casos_de_uso}
		
	\textbf{Caso de uso 1:} Navegar no mapa

	\textbf{Descrição:} Este caso de uso descreve o processo de navegação no mapa do sistema.
	
	\textbf{Evento iniciador:} Deslizamento do dedo na tela do mapa.
	
	\textbf{Atores:} Usuário
	
	\textbf{Pré-condição:} Sistema na tela principal exibindo o mapa.
	
	\textbf{Seqüência de eventos:}
	\begin{enumerate}
		\item Usuário navega no mapa através do deslizamento do dedo na tela;
		\item Sistema atualiza a exibição do mapa.
	\end{enumerate}
	
	\textbf{Pós-condição:} Exibição do mapa na posição desejada pelo usuário.
	
	\textbf{Extensões:} Não há.

	\

	\textbf{Caso de uso 2:} Localizar posição
	
	\textbf{Descrição:} Este caso de uso descreve o processo de exibição da posição atual do usuário no mapa.
	
	\textbf{Evento iniciador:} Solicitação da exibição da posição atual no mapa.
	
	\textbf{Atores:} Usuário
	
	\textbf{Pré-condição:} Sistema na tela principal exibindo o mapa.
	
	\textbf{Seqüência de eventos:}
	\begin{enumerate}
		\item Usuário solicita exibição da posição atual;
		\item Sistema verifica a posição do usuário através do uso de GPS e exibe a posição atual no mapa.
	\end{enumerate}
	
	\textbf{Pós-condição:} Posição atual do usuário exibida no mapa.
	
	\textbf{Extensões:}
	\begin{enumerate}
		\item Permissão para o uso do GPS desativada: sistema exibe mensagem ao usuário (passo 2).
	\end{enumerate}

	\

	\textbf{Caso de uso 3:} Verificar Trânsito
	
	\textbf{Descrição:} Este caso de uso descreve o processo de exibição do trânsito atual no mapa.
	
	\textbf{Evento iniciador:} Solicitação da exibição do trânsito atual no mapa.
	
	\textbf{Atores:} Usuário
	
	\textbf{Pré-condição:} Sistema na tela principal exibindo o mapa.
	
	\textbf{Seqüência de eventos:}
	\begin{enumerate}
		\item Usuário solicita exibição do trânsito atual no mapa;
		\item Sistema obtém informações do trânsito da região em que o usuário está visualizando no mapa e exibe o trânsito mapeado com cores na mapa.
	\end{enumerate}
	
	\textbf{Pós-condição:} Informações do trânsito atual exibidas no mapa.
	
	\textbf{Extensões:}
	\begin{enumerate}
		\item Sistema não consegue obter as informações do trânsito atual: sistema exibe uma mensagem ao usuário (passo 2).
	\end{enumerate}
	
	\
		
	\textbf{Caso de uso 4:} Informar evento
	
	\textbf{Descrição:} Este caso de uso descreve o processo de envio de evento para o sistema.
	
	\textbf{Evento iniciador:} Solicitação para envio de evento.
	
	\textbf{Atores:} Usuário
	
	\textbf{Pré-condição:} Sistema na tela principal exibindo o mapa com a posição atual do usuário.
	
	\textbf{Seqüência de eventos:}
	\begin{enumerate}
		\item Usuário solicita o envio de evento, através de um toque na tela do mapa;
		\item Sistema solicita os dados relativos ao evento;
		\item Usuário insere os dados do evento;
		\item Sistema insere o evento utilizando dados do GPS e exibe resultado.
	\end{enumerate}
	
	\textbf{Pós-condição:} Evento armazenado no sistema.
	
	\textbf{Extensões:}
	\begin{enumerate}
		\item Erro na inserção de dados do evento: sistema exibe uma mensagem ao usuário (passo 4).
	\end{enumerate}
	
	\
	
	\textbf{Caso de uso 5:} Informar posição atual
	
	\textbf{Descrição:} Este caso de uso descreve o processo de envio de dados da posição atual do usuário.
	
	\textbf{Evento iniciador:} Tempo de disparo do timer alcançado.
	
	\textbf{Atores:} \emph{Timer}
	
	\textbf{Pré-condição:} Usuário com a posição atual encontrada.
	
	\textbf{Seqüência de eventos:}
	\begin{enumerate}
		\item \emph{Timer} dispara enviando os dados da posição atual do usuário;
		\item Sistema armazena os dados;
	\end{enumerate}
	
	\textbf{Pós-condição:} Dados da posição atual do usuário armazenados.
	
	\textbf{Extensões:}
	\begin{enumerate}
		\item Erro no envio de dados para o sistema (passo 1).
	\end{enumerate}

